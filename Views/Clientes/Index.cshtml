@model List<Cadastro.Models.Cliente>

<h1>Lista de Clientes</h1>

<a asp-action="Novo" class="btn btn-primary mb-3">Novo Cliente</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome Completo</th>
            <th>E-mail</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.NomeCompleto</td>
                <td>@cliente.Email</td>
                <td>@cliente.CPF</td>
                <td>@cliente.DataNascimento?.ToShortDateString()</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@cliente.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>